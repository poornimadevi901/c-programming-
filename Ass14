#include<stdio.h>

 main()

{

	int n,i=1,sum1=0,sum2=0,diff;	printf("enter value of n\n");

	scanf("%d",&n);	

	while(i<=n)

	{		

    	if(i%2==0)

		{

			sum1=sum1+i;

		}

		else

		{

			sum2=sum2+i;

		}     	

        i++;        

  }

    printf("even sum=%d\t",sum1);

    printf("odd sum=%d\t",sum2);

    diff=sum1-sum2;

    printf("difference=%d",diff);

}
